{
	"$schema": "https://biomejs.dev/schemas/1.6.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignoreUnknown": true
	},
	"formatter": {
		"ignore": [
			"**.d.ts",
			"article/**"
		],
		"indentWidth": 2
	},
	"linter": {
		"enabled": false,
		"rules": {
			"recommended": true
		}
	}
}